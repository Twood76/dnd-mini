<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/parchment"
    tools:context="com.example.josippc.dm_my_dnd.MonsterView">


    <ImageView
        android:id="@+id/MonsterBackground"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:adjustViewBounds="false"
        android:contentDescription="BackgroundPicture"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/allfeats"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:background="@color/dark_crimson"
        android:fontFamily="@font/adam"
        android:onClick="openMonsterInfo"
        android:text="All Feats"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Armor"
        android:layout_width="165dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/dark_crimson"
        android:fontFamily="@font/adam"
        android:onClick="openMonsterInfo"
        android:text="Armor"
        app:layout_constraintEnd_toStartOf="@+id/ArmorandWep"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/General" />

    <Button
        android:id="@+id/Racial"
        android:layout_width="165dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:background="@color/dark_crimson"
        android:fontFamily="@font/adam"
        android:onClick="openMonsterInfo"
        android:text="Racial"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Armor" />

    <Button
        android:id="@+id/Weapon"
        android:layout_width="165dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/dark_crimson"
        android:fontFamily="@font/adam"
        android:text="Weapon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/allfeats"
        android:onClick="openFeats"/>

    <Button
        android:id="@+id/ArmorandWep"
        android:layout_width="165dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/dark_crimson"
        android:fontFamily="@font/adam"
        android:text="Armor and weapon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Weapon"
        android:onClick="openFeats"
        />

    <Button
        android:id="@+id/General"
        android:layout_width="165dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/dark_crimson"
        android:fontFamily="@font/adam"
        android:onClick="openFeats"
        android:text="General"
        app:layout_constraintEnd_toStartOf="@+id/Weapon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/allfeats" />
</android.support.constraint.ConstraintLayout>
