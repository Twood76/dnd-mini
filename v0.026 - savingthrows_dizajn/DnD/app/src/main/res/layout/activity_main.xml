<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/parchment"
    tools:context="com.example.josippc.dm_my_dnd.MainActivity"
    tools:layout_editor_absoluteY="81dp">


    <Button
        android:id="@+id/item_generator_button"
        android:layout_width="126"
        android:layout_height="137"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        android:drawableTop="@mipmap/itemgen_background"
        android:fontFamily="@font/adam"
        android:text="loot generator"
        android:textColor="?attr/actionModeSplitBackground"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/encounter_generator_button"
        app:layout_constraintTop_toBottomOf="@+id/items_button" />

    <Button
        android:id="@+id/name_button"
        android:layout_width="126dp"
        android:layout_height="129dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        android:drawableTop="@mipmap/namegen_background"
        android:fontFamily="@font/adam"
        android:text="Name generator"
        android:textColor="?attr/actionModeSplitBackground"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dmsheet_button"
        app:layout_constraintTop_toBottomOf="@+id/item_generator_button" />

    <Button
        android:id="@+id/encounter_generator_button"
        android:layout_width="115dp"
        android:layout_height="137dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        android:drawableTop="@mipmap/encounter_background"
        android:fontFamily="@font/adam"
        android:text="Encounter generator"
        android:textColor="?attr/actionModeSplitBackground"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/monsters_button" />

    <Button
        android:id="@+id/monsters_button"
        android:layout_width="110dp"
        android:layout_height="130dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        android:drawableTop="@mipmap/monster2_slika_foreground"
        android:elegantTextHeight="false"
        android:fontFamily="@font/adam"
        android:freezesText="false"
        android:onClick="openMonstersView"
        android:shadowColor="#455FA8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="0"
        android:text="Monsters"
        android:textColor="?attr/actionModeSplitBackground"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/items_button"
        android:layout_width="113dp"
        android:layout_height="129dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        android:drawableTop="@mipmap/items_background"
        android:elegantTextHeight="false"
        android:fontFamily="@font/adam"
        android:freezesText="false"
        android:shadowColor="#455FA8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="0"
        android:text="Items"
        android:textColor="?attr/actionModeSplitBackground"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/monsters_button"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Version 0.017"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/dmsheet_button"
        android:layout_width="115dp"
        android:layout_height="128dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        android:drawableTop="@mipmap/dmsheet_background"
        android:fontFamily="@font/adam"
        android:onClick="openDMSheet"
        android:text="Dm sheet"
        android:textColor="?attr/actionModeSplitBackground"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/encounter_generator_button" />

    <Button
        android:id="@+id/player_button"
        android:layout_width="115dp"
        android:layout_height="125dp"
        android:layout_marginLeft="132dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        android:drawableTop="@mipmap/player_foreground"
        android:fontFamily="@font/adam"
        android:onClick="openPlayers"
        android:text="Players"
        android:textColor="?attr/actionModeSplitBackground"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dmsheet_button" />" /><![CDATA[

    " />

]]>
</android.support.constraint.ConstraintLayout>
